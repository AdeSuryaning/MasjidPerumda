<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:background="@color/colorBackground1"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/date_pemasukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="03 Juli 2020"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#F0145B" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/type_pemasukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/transaksi"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#FFB640FF" />

            <TextView
                android:id="@+id/note_pemasukan"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/type_pemasukan"
                android:maxLines="1"
                android:text="@string/ket"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/amount_pemasukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="0000"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/black" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>