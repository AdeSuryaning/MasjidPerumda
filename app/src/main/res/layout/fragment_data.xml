<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientsplash"
    android:gravity="center"
    tools:context=".DataFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA MASJID"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="35sp"
        android:theme="@style/CardView.Light"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#709d9e"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/styleinventarisbutton"
            android:src="@drawable/ic_store_inventaris"/>

        <Button
            android:id="@+id/inventarisbtn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Inventaris"
            android:background="@drawable/styleinventarisbutton"
            android:textSize="25sp"
            android:textColor="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#7e7c99"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/styleuangbutton"
            android:src="@drawable/ic_account_balance_uang"/>

        <Button
            android:id="@+id/uangbtn"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Keuangan"
            android:background="@drawable/styleuangbutton"
            android:textSize="25sp"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>